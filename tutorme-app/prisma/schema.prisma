  requestedAt          DateTime  @default(now())
  processedAt          DateTime?
  transactionReference String?
  
  tutor                User      @relation(fields: [tutorId], references: [id], onDelete: Cascade)
  
  @@index([tutorId])
  @@index([status])
}

model StudyGroup {
